<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "banner.png" %>');">
  <div class="banner-content">
    <h1>Don't paddle, ZA:DL !</h1>
    <p><%= t('root.organize') %><span class="rotate"></span><%= t('root.clicks') %></p>
    <% if current_user %>
      <%= form_tag new_user_event_path(current_user), method: :get do %>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-lg-2 col-lg-offset-4">
              <div class="event-name-field-col">
                <div class="event-name-field">
                  <%= text_field_tag :event_name, nil, id: :activity_name, placeholder: t('root.activity') %>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-lg-2">
              <div class="event-name-button-col">
                <div class="event-name-button">
                  <%= submit_tag t('root.create_banner'), class: "btn btn-danger btn-lg" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= form_tag new_user_registration_path, method: :get, class: "home-form" do %>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-lg-2 col-lg-offset-4">
              <div class="event-name-field-col">
                <div class="event-name-field">
                  <%= text_field_tag :event_name, nil, id: :activity_name, placeholder: t('root.activity') %>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-lg-2">
              <div class="event-name-button-col">
                <div class="event-name-button">
                  <%= submit_tag t('root.create_banner'), class: "btn btn-danger btn-lg" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
